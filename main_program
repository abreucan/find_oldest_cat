#exercises_ztm

#Given the below class:
class Cat:
    species = 'mammal'
    def __init__(self, name, age):
        self.name = name
        self.age = age

def oldest_cat(*args):
    return max(args)

cat1 = Cat('Cleo', 5)
cat2 = Cat('Mia', 3)
cat3 = Cat('Lady', 2)

print(f'The oldest cat is {oldest_cat(cat1.age,cat2.age,cat3.age)} years old.')
